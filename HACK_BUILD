debian_pkg('digg-hackbuilder',
           version='0.1',
           deps=[':hack'])

python_bin('hack',
           entry_point='digg.dev.hackbuilder.cli.hack:main',
           deps=[':hackbuilder_lib']
           )

python_test('test_target',
           entry_point='digg.dev.hackbuilder.test_target:main',
           deps=[':hackbuilder_lib']
           )

python_lib('hackbuilder_lib',
           files=[
               'build.py',
               'common.py',
               'cli/commands/build.py',
               'cli/hack.py',
               'errors.py',
               'plugin_utils.py',
               'plugins/__init__.py',
               'plugins/debian.py',
               'plugins/python.py',
               'target.py',
               'test_target.py',
               'util.py',
               ],
           packages=[
               'digg.dev.hackbuilder',
               'digg.dev.hackbuilder.cli',
               'digg.dev.hackbuilder.cli.commands',
               'digg.dev.hackbuilder.plugins',
               ],
           deps=[
               '/third_party/argparse:prod',
               ],
           )
